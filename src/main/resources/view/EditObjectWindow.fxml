<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.HBox?>
<?import javafx.stage.Stage?>

<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.TextArea?>
<fx:root resizable="false" title="Notebook" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/11"
         xmlns:fx="http://javafx.com/fxml/1">
    <icons>
        <Image url="@/images/help_icon.png"/>
    </icons>
    <scene>
        <Scene>
            <HBox>
                <children>
                    <StackPane alignment="TOP_CENTER">
                        <Label fx:id="noteTitle" text="Label">
                        </Label>
                    </StackPane>
                </children>
                <children>
                    <StackPane alignment="CENTER">
                        <TextArea fx:id="noteContent" text="Label">
                        </TextArea>
                    </StackPane>
                </children>
                <Button fx:id="saveButton" mnemonicParsing="false" onAction="#saveNote" text="Save Note">
                    <HBox.margin>
                        <Insets left="5.0" />
                    </HBox.margin>
                </Button>
                <opaqueInsets>
                    <Insets bottom="10.0" left="5.0" right="10.0" top="5.0"/>
                </opaqueInsets>
                <padding>
                    <Insets bottom="10.0" left="5.0" right="10.0" top="5.0"/>
                </padding>
            </HBox>
        </Scene>
    </scene>
</fx:root>
