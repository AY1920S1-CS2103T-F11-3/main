<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.stage.Stage?>

<fx:root minHeight="700" minWidth="700" onCloseRequest="#handleExit" title="SecureIT" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
  <icons>
    <Image url="@/images/address_book_32.png" />
  </icons>
  <scene>
    <Scene>
      <stylesheets>
        <URL value="@DarkTheme.css" />
        <URL value="@Extensions.css" />
      </stylesheets>

      <VBox>
        <MenuBar fx:id="menuBar" VBox.vgrow="NEVER">
          <Menu mnemonicParsing="false" text="File">
            <MenuItem mnemonicParsing="false" onAction="#handleExit" text="Exit" />
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <MenuItem fx:id="helpMenuItem" mnemonicParsing="false" onAction="#handleHelp" text="Help" />
          </Menu>
        </MenuBar>

        <StackPane fx:id="commandBoxPlaceholder" styleClass="pane-with-border" VBox.vgrow="NEVER">
          <padding>
            <Insets bottom="5" left="10" right="10" top="5" />
          </padding>
        </StackPane>


        <StackPane fx:id="resultDisplayPlaceholder" maxHeight="100" minHeight="100" prefHeight="100" styleClass="pane-with-border" VBox.vgrow="NEVER">
          <padding>
            <Insets bottom="5" left="10" right="10" top="5" />
          </padding>
        </StackPane>

        <HBox VBox.vgrow="ALWAYS">
          <VBox fx:id="modeList" minWidth="120" prefWidth="120" styleClass="pane-with-border" HBox.hgrow="NEVER" VBox.vgrow="ALWAYS">
            <padding>
              <Insets bottom="5" left="10" right="10" top="5" />
            </padding>
            <children>
              <Label style="-fx-text-fill: #75878E;" text="Mode: " HBox.hgrow="ALWAYS" />
              <Button fx:id="b1" minWidth="100" styleClass="buttonSide" text="Password" HBox.hgrow="ALWAYS" />
              <Button fx:id="b2" minWidth="100" styleClass="buttonSide" text="File" HBox.hgrow="ALWAYS" />
              <Button fx:id="b3" minWidth="100" styleClass="buttonSide" text="Card" HBox.hgrow="ALWAYS" />
              <Button fx:id="b4" minWidth="100" styleClass="buttonSide" text="Note" HBox.hgrow="ALWAYS" />
            </children>
          </VBox>

          <VBox fx:id="objectList" minWidth="200" prefWidth="200" styleClass="pane-with-border" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
            <padding>
              <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            <StackPane fx:id="objectListPanelPlaceholder" VBox.vgrow="ALWAYS" />
          </VBox>

          <VBox fx:id="readList" maxWidth="0" minWidth="0" prefWidth="0" styleClass="pane-with-border" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">
            <padding>
              <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            <StackPane fx:id="readListPanelPlaceholder" />
          </VBox>

        </HBox>

        <StackPane fx:id="statusbarPlaceholder" VBox.vgrow="NEVER" />
      </VBox>
    </Scene>
  </scene>
</fx:root>
